@model IEnumerable<CertiNet.Models.CertificadoDigital>

@{
    ViewData["Title"] = $"Certificados Vencendo nos Próximos {ViewBag.Dias} Dias";
}

<h1>@ViewData["Title"]</h1>

<hr />

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Cliente
                </th>
                <th>
                    Produto
                </th>
                <th>
                    Data de Vencimento
                </th>
                <th>
                    Contato do Cliente
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.NomeRazaoSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @item.DataVencimento.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Email)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>Nenhum certificado encontrado vencendo no período selecionado.</p>
    </div>
}

<div>
    <a asp-action="Index">Voltar para a Central de Relatórios</a>
</div>